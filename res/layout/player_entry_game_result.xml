<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:id="@+id/player_entry_game_result"
    android:weightSum="1.0">


    <TextView
        android:id="@+id/player_entry_game_result_name"
        android:paddingLeft="5dp"
        android:background="@color/blue"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:gravity="left|center_vertical"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:ellipsize="marquee"
        android:lines="1"
        android:text="@string/str_player"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:weightSum="1.0"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/player_entry_game_result_name_points"
            android:paddingLeft="5dp"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:gravity="left|center_vertical"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:lines="1"
            android:text=""
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_entry_game_result_x"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.05"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:lines="1"
            android:text="Ã—"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_entry_game_result_factor"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.20"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:lines="1"
            android:text=""
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_entry_game_result_end"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.05"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:lines="1"
            android:text="="
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_entry_game_result_final_result"
            android:background="@color/white"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:lines="1"
            android:text=""
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>