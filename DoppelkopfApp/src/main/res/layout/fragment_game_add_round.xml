<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:descendantFocusability="beforeDescendants"
	android:focusableInTouchMode="true"
    android:layout_marginTop="-4dp"
	android:background="@color/activity_background_color"
	android:id="@+id/game_add_round_main_layout">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/table_footer_background"
        android:orientation="vertical">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:paddingTop="@dimen/item_space"
			android:paddingLeft="@dimen/item_space">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical|center_horizontal"
				android:text="@string/str_game_points"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/white" />

			<View
				android:layout_width="10dp"
				android:layout_height="fill_parent" />

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:weightSum="1.0">

					<TextView
						android:id="@+id/game_add_round_points_entry"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_gravity="left"
						android:layout_weight="0.60"
						android:clickable="false"
						android:gravity="center_vertical"
						android:hint=""
						android:paddingLeft="@dimen/item_space"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:textColor="@color/white" />


					<TextView
						android:id="@+id/game_add_round_bock_points"
						android:layout_width="0dip"
						android:layout_height="match_parent"
						android:layout_weight="0.4"
						android:gravity="center"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:textColor="@color/light_gray" />

				</LinearLayout>


			</LinearLayout>

		</LinearLayout>

		<View
            android:layout_width="fill_parent"
            android:layout_height="4dip"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/drop_shadow" />

    </LinearLayout>

    <ScrollView
		android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="-4dp"
        android:paddingLeft="@dimen/activity_padding_lr"
        android:paddingRight="@dimen/activity_padding_lr">
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_space"
	        android:orientation="vertical" >

            <include layout="@layout/fragment_game_new_round_grid_point"/>

	        <LinearLayout
                android:layout_marginTop="@dimen/item_space"
	            android:id="@+id/game_add_round_playersection"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
                android:paddingTop="@dimen/round_new_edit_padding_tb"
                android:paddingBottom="@dimen/round_new_edit_padding_tb">



	        </LinearLayout>

			<LinearLayout
                android:animateLayoutChanges="true"
				android:id="@+id/game_add_round_bock_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_space"
				android:background="@color/white"
				android:orientation="vertical"
				android:paddingBottom="@dimen/round_new_edit_padding_tb"
				android:paddingTop="@dimen/round_new_edit_padding_tb">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/item_space"
                    android:orientation="horizontal"
                    android:weightSum="1.0">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="left|top"
                        android:text="@string/str_game_points_choose_bock"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black" />

                    <ImageView
                        android:clickable="true"
                        android:id="@+id/game_add_round_bock_info"
                        android:tint="@color/btn_style_1"
                        android:src="@drawable/ic_info_outline_black_24dp"
                        android:layout_weight="0.29"
                        android:layout_width="0dip"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        />


                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/game_add_round_bock_cb"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginLeft="@dimen/round_new_edit_padding_lr"
                        android:buttonTint="@color/black"
                        android:gravity="right|center_horizontal"
                        android:text=""
                        app:buttonTint="@color/gray_dark" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/game_add_round_bock_details_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_space"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <TextView
							android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="left|center_vertical"
                            android:text="@string/str_game_bock_rounds_cnt"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/gray_dark" />

                        <Spinner
                            android:id="@+id/game_bock_rounds_cnt"
                            style="@style/Spinner"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_space"
                        android:orientation="horizontal"
                        android:weightSum="1.0">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="left|center_vertical"
                            android:text="@string/str_game_bock_rounds_game_cnt"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/gray_dark" />

                        <Spinner
                            android:id="@+id/game_bock_rounds_game_cnt"
                            style="@style/Spinner"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.3" />

                    </LinearLayout>
                </LinearLayout>
			</LinearLayout>
			
			<LinearLayout
                android:animateLayoutChanges="true"
				android:id="@+id/game_detailed_round_info_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_space"
				android:background="@color/white"
				android:orientation="vertical"
				android:paddingBottom="@dimen/round_new_edit_padding_tb"
				android:paddingTop="@dimen/round_new_edit_padding_tb">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/item_space"
                    android:orientation="horizontal"
                    android:weightSum="1.0">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="left|top"
                        android:text="@string/str_game_enter_detailed_info"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black" />

                    <ImageView
                        android:clickable="true"
                        android:id="@+id/game_detailed_round_info_info"
                        android:tint="@color/btn_style_1"
                        android:src="@drawable/ic_info_outline_black_24dp"
                        android:layout_weight="0.29"
                        android:layout_width="0dip"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        />


                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/game_detailed_round_info_cb"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginLeft="@dimen/round_new_edit_padding_lr"
                        android:buttonTint="@color/black"
                        android:gravity="right|center_horizontal"
                        android:text=""
                        app:buttonTint="@color/gray_dark" />

                </LinearLayout>

                <LinearLayout
					android:id="@+id/game_detailed_round_info_details_container"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/item_space"
					android:animateLayoutChanges="true"
					android:visibility="gone"
					android:background="@color/white"
					android:orientation="vertical"
					android:paddingTop="@dimen/round_new_edit_padding_tb"
					android:paddingBottom="@dimen/round_new_edit_padding_tb">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="Sieger"
						android:textSize="17sp"
						android:textStyle="bold" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<RadioGroup
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="horizontal" >

							<RadioButton
								android:id="@+id/rb_re_won"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Re-Partei" />

							<RadioButton
								android:id="@+id/rb_contra_won"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Kontra-Partei" />
						</RadioGroup>
					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<ToggleButton
							android:id="@+id/tb_no120"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="ToggleButton"
							android:textOff="Keine 120"
							android:textOn="Keine 120" />

						<ToggleButton
							android:id="@+id/tb_no90"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="ToggleButton"
							android:textOff="Keine 90"
							android:textOn="Keine 90" />

						<ToggleButton
							android:id="@+id/tb_no60"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="ToggleButton"
							android:textOff="Keine 60"
							android:textOn="Keine 60" />

						<ToggleButton
							android:id="@+id/tb_no30"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="ToggleButton"
							android:textOff="Keine 30"
							android:textOn="Keine 30" />

						<ToggleButton
							android:id="@+id/tb_no0"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="ToggleButton"
							android:textOff="Keine\n0"
							android:textOn="Keine\n0" />
					</LinearLayout>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="Ansagen"
						android:textSize="17sp"
						android:textStyle="bold" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">
							
							<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:text="Re" />
								
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
								
								<ToggleButton
								android:id="@+id/tb_re_re"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Re"
								android:textOn="Re" />
								<ToggleButton
								android:id="@+id/tb_re_120"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="120"
								android:textOn="120" />
							</LinearLayout>
								
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
								
								<ToggleButton
								android:id="@+id/tb_re_90"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="90"
								android:textOn="90" />
								<ToggleButton
								android:id="@+id/tb_re_60"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="60"
								android:textOn="60" />
								<ToggleButton
								android:id="@+id/tb_re_30"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="30"
								android:textOn="30" />
								<ToggleButton
								android:id="@+id/tb_re_0"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="0"
								android:textOn="0" />
							</LinearLayout>
						</LinearLayout>
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">
							
							<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:text="Kontra" />
							
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">

								<ToggleButton
								android:id="@+id/tb_contra_contra"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Kontra"
								android:textOn="Kontra" />

								<ToggleButton
								android:id="@+id/tb_contra_120"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="120"
								android:textOn="120" />

							</LinearLayout>
								
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
								<ToggleButton
								android:id="@+id/tb_contra_90"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="90"
								android:textOn="90" />
								<ToggleButton
								android:id="@+id/tb_contra_60"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="60"
								android:textOn="60" />
								<ToggleButton
								android:id="@+id/tb_contra_30"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="30"
								android:textOn="30" />
								<ToggleButton
								android:id="@+id/tb_contra_0"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="0"
								android:textOn="0" />
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="Sonderpunkte"
						android:textSize="17sp"
						android:textStyle="bold" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">

							<TextView
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:text="Re" />
								
							<ToggleButton
								android:id="@+id/btn_re_doppelkopf"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Doppelkopf"
								android:textOn="Doppelkopf" />

							<SeekBar
								android:id="@+id/re_seekBar_DK"
								style="@style/Widget.AppCompat.SeekBar.Discrete"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:visibility="gone"
								android:max="4"
								android:progress="1" />

							<ToggleButton
								android:id="@+id/btn_re_fuchs"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Fuchs"
								android:textOn="Fuchs" />
							
							<SeekBar
								android:id="@+id/re_seekBar_Fuchs"
								style="@style/Widget.AppCompat.SeekBar.Discrete"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:visibility="gone"
								android:max="2"
								android:progress="1" />

							<ToggleButton
								android:id="@+id/btn_re_karl"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Karlchen"
								android:textOn="Karlchen" />

							<ToggleButton
								android:id="@+id/btn_re_heart"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Herzstich"
								android:textOn="Herzstich" />
						</LinearLayout>

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">

							<TextView
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:text="Kontra" />
								
							<ToggleButton
								android:id="@+id/btn_contra_doppelkopf"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Doppelkopf"
								android:textOn="Doppelkopf" />

							<SeekBar
								android:id="@+id/contra_seekBar_DK"
								style="@style/Widget.AppCompat.SeekBar.Discrete"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:visibility="gone"
								android:max="4"
								android:progress="1" />

							<ToggleButton
								android:id="@+id/btn_contra_fuchs"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Fuchs"
								android:textOn="Fuchs" />
							
							<SeekBar
								android:id="@+id/contra_seekBar_Fuchs"
								style="@style/Widget.AppCompat.SeekBar.Discrete"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:visibility="gone"
								android:max="2"
								android:progress="1" />

							<ToggleButton
								android:id="@+id/btn_contra_karl"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Karlchen"
								android:textOn="Karlchen" />

							<ToggleButton
								android:id="@+id/btn_contra_heart"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Herzstich"
								android:textOn="Herzstich" />
							
							<ToggleButton
								android:id="@+id/btn_contra_gegen"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:text="ToggleButton"
								android:textOff="Gegen die Alten"
								android:textOn="Gegen die Alten" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:orientation="horizontal">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="left"
							android:text="Projected points:"
							android:textStyle="bold" />
						<TextView
							android:id="@+id/text_projected_points"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="left"
							android:text="0 P." />
						<TextView
							android:id="@+id/text_winner"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="left"
							android:text="(Re)" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<Button
				android:layout_marginTop="@dimen/item_space"
				android:layout_marginBottom="@dimen/item_space"
				android:id="@+id/btn_game_add_new_round"
				android:padding="15dp"
