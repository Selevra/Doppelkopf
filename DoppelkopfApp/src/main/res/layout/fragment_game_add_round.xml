<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:descendantFocusability="beforeDescendants"
	android:focusableInTouchMode="true"
    android:layout_marginTop="-4dp"
	android:background="@color/activity_background_color"
	android:id="@+id/game_add_round_main_layout">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/table_footer_background"
        android:orientation="vertical">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:paddingTop="@dimen/item_space"
			android:paddingLeft="@dimen/item_space">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical|center_horizontal"
				android:text="@string/str_game_points"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/white" />

			<View
				android:layout_width="10dp"
				android:layout_height="fill_parent" />

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:weightSum="1.0">

					<TextView
						android:id="@+id/game_add_round_points_entry"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_gravity="left"
						android:layout_weight="0.60"
						android:clickable="false"
						android:gravity="center_vertical"
						android:hint=""
						android:paddingLeft="@dimen/item_space"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:textColor="@color/white" />


					<TextView
						android:id="@+id/game_add_round_bock_points"
						android:layout_width="0dip"
						android:layout_height="match_parent"
						android:layout_weight="0.4"
						android:gravity="center"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:textColor="@color/light_gray" />

				</LinearLayout>


			</LinearLayout>

		</LinearLayout>

		<View
            android:layout_width="fill_parent"
            android:layout_height="4dip"
            android:layout_marginTop="0dp"
            android:background="@drawable/drop_shadow" />

    </LinearLayout>

    <ScrollView
		android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-4dp"
        android:paddingLeft="@dimen/activity_padding_lr"
        android:paddingRight="@dimen/activity_padding_lr">
	
	    <LinearLayout
			android:id="@+id/game_add_round_point_grid"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_space"
	        android:orientation="vertical" >

            <include layout="@layout/fragment_game_new_round_grid_point"/>

            <LinearLayout
                android:animateLayoutChanges="true"
                android:id="@+id/game_detailed_round_info_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_space"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/round_new_edit_padding_tb"
                android:paddingTop="@dimen/round_new_edit_padding_tb">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/round_result"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/tb_no120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ToggleButton"
                        android:textOff="Keine 120"
                        android:textOn="Keine 120" />

                    <ToggleButton
                        android:id="@+id/tb_no90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ToggleButton"
                        android:textOff="Keine 90"
                        android:textOn="Keine 90" />

                    <ToggleButton
                        android:id="@+id/tb_no60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ToggleButton"
                        android:textOff="Keine 60"
                        android:textOn="Keine 60" />

                    <ToggleButton
                        android:id="@+id/tb_no30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ToggleButton"
                        android:textOff="Keine 30"
                        android:textOn="Keine 30" />

                    <ToggleButton
                        android:id="@+id/tb_no0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
						android:layout_gravity="center"
						android:gravity="center"
                        android:text="ToggleButton"
                        android:textOff="0\n"
                        android:textOn="0\n"/>
                </LinearLayout>
				<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="for" />

                    <RadioGroup
						android:id="@+id/rb_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rb_re_won"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
							android:minHeight="48dp"
                            android:text="Re-Party" />

                        <RadioButton
                            android:id="@+id/rb_kontra_won"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
							android:minHeight="48dp"
                            android:text="Kontra-Party" />
                    </RadioGroup>
                </LinearLayout>
				
				<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Round type"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/im_round_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_round_type"
					android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Normal" />

                        <ToggleButton
                            android:id="@+id/btn_normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Normal"
                            android:textOn="Normal" />

                        <ToggleButton
                            android:id="@+id/btn_hochzeit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Hochzeit"
                            android:textOn="Hochzeit" />

                        <ToggleButton
                            android:id="@+id/btn_armut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Armut"
                            android:textOn="Armut" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Solo" />

                        <ToggleButton
                            android:id="@+id/btn_obersolo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Obersolo"
                            android:textOn="Obersolo" />
							
						<ToggleButton
                            android:id="@+id/btn_untersolo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Untersolo"
                            android:textOn="Untersolo" />
							
						<ToggleButton
                            android:id="@+id/btn_fleischloser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Fleischloser"
                            android:textOn="Fleischloser" />
							
						<ToggleButton
                            android:id="@+id/btn_farbsolo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Farbsolo"
                            android:textOn="Farbsolo" />
						
						<ToggleButton
                            android:id="@+id/btn_stille_hochzeit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="stille Hochzeit"
                            android:textOn="stille Hochzeit" />
					</LinearLayout>
				</LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="An-/Absagen"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/im_ansagen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_ansagen"
					android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Re" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ToggleButton
                                android:id="@+id/tb_re_re"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ToggleButton"
                                android:textOff="Re"
                                android:textOn="Re" />
							<ToggleButton
                                android:id="@+id/tb_re_90"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ToggleButton"
                                android:textOff="No 90"
                                android:textOn="No 90" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ToggleButton
                                android:id="@+id/tb_re_60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ToggleButton"
                                android:textOff="No 60"
                                android:textOn="No 60" />
                            <ToggleButton
                                android:id="@+id/tb_re_30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ToggleButton"
                                android:textOff="No 30"
                                android:textOn="No 30" />
                            <ToggleButton
                                android:id="@+id/tb_re_0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ToggleButton"
                                android:textOff="0"
                                android:textOn="0" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kontra" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ToggleButton
                                android:id="@+id/tb_kontra_kontra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ToggleButton"
                                android:textOff="Kontra"
                                android:textOn="Kontra" />
							<ToggleButton
                                android:id="@+id/tb_kontra_90"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ToggleButton"
                                android:textOff="No 90"
                                android:textOn="No 90" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ToggleButton
                                android:id="@+id/tb_kontra_60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ToggleButton"
                                android:textOff="No 60"
                                android:textOn="No 60" />
                            <ToggleButton
                                android:id="@+id/tb_kontra_30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ToggleButton"
                                android:textOff="No 30"
                                android:textOn="No 30" />
                            <ToggleButton
                                android:id="@+id/tb_kontra_0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ToggleButton"
                                android:textOff="0"
                                android:textOn="0" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Sonderpunkte"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/im_special"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_special_points"
					android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Re" />

                        <ToggleButton
                            android:id="@+id/btn_re_doppelkopf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Doppelkopf"
                            android:textOn="Doppelkopf" />

                        <SeekBar
                            android:id="@+id/re_seekBar_DK"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:max="4"
                            android:progress="1" />

                        <ToggleButton
                            android:id="@+id/btn_re_fuchs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Fuchs"
                            android:textOn="Fuchs" />

                        <SeekBar
                            android:id="@+id/re_seekBar_Fuchs"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:max="2"
                            android:progress="1" />

                        <ToggleButton
                            android:id="@+id/btn_re_karl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Karlchen"
                            android:textOn="Karlchen" />

                        <ToggleButton
                            android:id="@+id/btn_re_heart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Herzstich"
                            android:textOn="Herzstich" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kontra" />

                        <ToggleButton
                            android:id="@+id/btn_kontra_doppelkopf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Doppelkopf"
                            android:textOn="Doppelkopf" />

                        <SeekBar
                            android:id="@+id/kontra_seekBar_DK"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:max="4"
                            android:progress="1" />

                        <ToggleButton
                            android:id="@+id/btn_kontra_fuchs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Fuchs"
                            android:textOn="Fuchs" />

                        <SeekBar
                            android:id="@+id/kontra_seekBar_Fuchs"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:max="2"
                            android:progress="1" />

                        <ToggleButton
                            android:id="@+id/btn_kontra_karl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Karlchen"
                            android:textOn="Karlchen" />

                        <ToggleButton
                            android:id="@+id/btn_kontra_heart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Herzstich"
                            android:textOn="Herzstich" />

                        <ToggleButton
                            android:id="@+id/btn_kontra_gegen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ToggleButton"
                            android:textOff="Gegen die Alten"
                            android:textOn="Gegen die Alten" />
                    </LinearLayout>
                </LinearLayout>
				<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
					<TextView
						android:id="@+id/line"
						style="?android:attr/listSeparatorTextViewStyle"
						android:paddingTop="5dip"
						android:gravity="center_horizontal"
						android:layout_width="match_parent"
						android:layout_height="2dp"
						android:background="#000" />
				</LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
						android:textSize="17sp"
                        android:text="Total points:"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/text_projected_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="-" />
                    <TextView
                        android:id="@+id/text_winner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

	        <LinearLayout
                android:layout_marginTop="@dimen/item_space"
	            android:id="@+id/game_add_round_playersection"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
                android:paddingTop="@dimen/round_new_edit_padding_tb"
                android:paddingBottom="@dimen/round_new_edit_padding_tb">



	        </LinearLayout>

			<LinearLayout
                android:animateLayoutChanges="true"
				android:id="@+id/game_add_round_bock_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_space"
				android:background="@color/white"
				android:orientation="vertical"
				android:paddingBottom="@dimen/round_new_edit_padding_tb"
				android:paddingTop="@dimen/round_new_edit_padding_tb">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/item_space"
                    android:orientation="horizontal"
                    android:weightSum="1.0">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="left|top"
                        android:text="@string/str_game_points_choose_bock"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black" />

                    <ImageView
                        android:clickable="true"
						android:focusable="true"
                        android:id="@+id/game_add_round_bock_info"
                        app:tint="@color/btn_style_1"
                        android:src="@drawable/ic_info_outline_black_24dp"
                        android:layout_weight="0.29"
                        android:layout_width="0dip"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        />


                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/game_add_round_bock_cb"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginLeft="@dimen/round_new_edit_padding_lr"
                        android:buttonTint="@color/black"
                        android:gravity="right|center_horizontal"
                        android:text=""
                        app:buttonTint="@color/gray_dark" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/game_add_round_bock_details_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_space"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <TextView
							android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="left|center_vertical"
                            android:text="@string/str_game_bock_rounds_cnt"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/gray_dark" />

                        <Spinner
                            android:id="@+id/game_bock_rounds_cnt"
                            style="@style/Spinner"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_space"
                        android:orientation="horizontal"
                        android:weightSum="1.0">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="left|center_vertical"
                            android:text="@string/str_game_bock_rounds_game_cnt"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/gray_dark" />

                        <Spinner
                            android:id="@+id/game_bock_rounds_game_cnt"
                            style="@style/Spinner"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.3" />

                    </LinearLayout>
                </LinearLayout>
			</LinearLayout>

			<Button
				android:layout_marginTop="@dimen/item_space"
				android:layout_marginBottom="@dimen/item_space"
				android:id="@+id/btn_game_add_new_round"
				android:padding="15dp"
				android:textSize="22sp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textAllCaps="false"
				android:textColor="@color/light_gray"
				android:text="@string/str_game_add_new_round"
				android:background="@drawable/bnt_style_1"
				android:elevation="4dp"/>

	    </LinearLayout>
    </ScrollView>

</LinearLayout>