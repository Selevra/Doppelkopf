<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center" >

    <TextView
        android:id="@+id/fragment_game_round_view_table_round_points"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/table_entry_round_points"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragment_game_round_view_table_round_points_solo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/table_entry_round_bock_total"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/fragment_game_round_view_table_round_bock_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/table_entry_round_bock_count"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>

